<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Watch"
            android:layout_gravity="center"
            android:textStyle="italic"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_search"
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:background="@drawable/circle"
                android:drawableTop="@drawable/ic_search_black_24dp"
                android:paddingTop="20dp"
                android:drawableTint="#fff"
                android:text="Search Resume"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btn_jobseeker_detail"
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/circle"
                android:drawableTop="@drawable/ic_assessment_black_24px"
                android:drawableTint="#fff"
                android:paddingTop="20dp"
                android:text="Jobseeker Details"
                android:textColor="#fff"
                android:layout_weight="0.64" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_post_job"
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:background="@drawable/circle"
                android:drawableTint="#fff"
                android:layout_marginTop="20dp"
                android:drawableTop="@drawable/jobs_for_you"
                android:paddingTop="20dp"
                android:text="Post Job"
                android:textColor="#fff" />

            <Button
                android:id="@+id/button3"
                android:layout_marginTop="13dp"
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"

                android:background="@drawable/circle"
                android:drawableTint="#fff"
                android:drawableTop="@drawable/ic_file_upload_black_24px"
                android:paddingTop="20dp"
                android:text="Upload Test"
                android:textColor="#fff" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:background="@drawable/circle"
                android:paddingTop="20dp"
                android:drawableTop="@drawable/ic_schedule_black_24dp"
                android:drawableTint="#fff"
                android:text="Schedule Test"
                android:textColor="#fff" />

            <Button
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/circle"
                android:drawableTop="@drawable/ic_message_black_24px"
                android:paddingTop="20dp"
                android:drawableTint="#fff"
                android:text="Messages"
                android:textColor="#fff" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/button2"
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:background="@drawable/circle"
                android:drawableTint="#fff"
                android:drawableTop="@drawable/ic_assignment_turned_in_black_24px"
                android:paddingTop="20dp"
                android:text="Selected Resume"
                android:textColor="#fff" />

            <Button
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/circle"
                android:drawableTop="@drawable/ic_assignment_black_24px"
                android:drawableTint="#fff"
                android:paddingTop="20dp"
                android:text="Test Result"
                android:textColor="#fff"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:background="@drawable/circle"
                android:paddingTop="20dp"
                android:drawableTop="@drawable/ic_settings_black_24dp"
                android:drawableTint="#fff"
                android:text="Settings"
                android:textColor="#fff" />

            <Button
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/circle"
                android:drawableTop="@drawable/ic_collections_black_24dp"
                android:paddingTop="20dp"
                android:drawableTint="#fff"
                android:text="Manage Job Posting"
                android:textColor="#fff" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_feedback"
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:background="@drawable/circle"
                android:drawableTint="#fff"
                android:drawableTop="@drawable/ic_feedback_black_24dp"
                android:paddingTop="20dp"
                android:text="Feedback"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/circle"
                android:drawableTop="@drawable/ic_settings_power_black_24dp"
                android:drawableTint="#fff"
                android:paddingTop="20dp"
                android:text="Log Out"
                android:textColor="#fff"
                />
        </LinearLayout>

    </LinearLayout>

</ScrollView>